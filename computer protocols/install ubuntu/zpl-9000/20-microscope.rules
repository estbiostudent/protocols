## Make descriptive symlinks in /dev to various microscopy devices

# Leica microscope
SUBSYSTEMS=="usb", ATTRS{product}=="USB <-> Serial", ATTRS{manufacturer}=="FTDI", SYMLINK+="ttyScope"

# Lumencor Spectra lamp
SUBSYSTEMS=="usb", ATTRS{product}=="FT232R USB UART", ATTRS{manufacturer}=="FTDI", ATTRS{serial}=="AH05KCHF", SYMLINK+="ttySpectra"

# Anova A25 circulator
SUBSYSTEMS=="usb", ATTRS{product}=="FT232R USB UART", ATTRS{manufacturer}=="FTDI", ATTRS{serial}=="A600TTJN", SYMLINK+="ttyCirculator"

# IOTool interface box
SUBSYSTEMS=="usb", ATTRS{product}=="IOTool", ATTRS{manufacturer}=="zplab.wustl.edu", ATTRS{serial}=="0xFFFF", SYMLINK+="ttyIOTool"

# Humidity controller
SUBSYSTEMS=="usb", ATTRS{product}=="USB-RS232 Cable", ATTRS{manufacturer}=="FTDI", ATTRS{serial}=="FT1DK2RR", SYMLINK+="ttyHumidifier"

